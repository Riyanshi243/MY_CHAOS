<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_error"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n\n\n\n\n\n\n\t\t\t\t\t\t\t\t\t\tShow my Time Table"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\tMy Subjects"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\tMy Money"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\tMy Notes"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>
</FrameLayout>